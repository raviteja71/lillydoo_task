{% extends 'base.html.twig' %}


{% block body %}
	<div class="jumbotron">
		<h1>Address Book</h1>
		<p>Want to add your address. It's free and always will be. <a href="/users">add</a></p>  
	 </div>
	 {% for msg in app.flashes('success') %}
    <div class="alert alert-success">
        {{ msg }}
    </div>
	{% endfor %}
	{% for msg in app.flashes('warning') %}
    <div class="alert alert-success">
        {{ msg }}
    </div>
	{% endfor %}
	<table class="table">
		<thead>
		  <tr>
			<th>Firstname</th>
			<th>Lastname</th>
			<th>Email</th>
			<th>Date of Birth</th>
		  </tr>
		</thead>
		<tbody>
			{%if navigation %}
			{% for item in navigation %}
			 <tr>
				<td>{{ item.firstname }}</td>
				<td>{{ item.lastname }}</td>
				<td>{{ item.email }}</td>
				<td> {{ item.birthdate |date("m/d/Y")}}</td>
				<td><a href="user/{{ item.id }}/edit">Edit</a></td>
				<td> <a href="/delete/{{ item.id }}" onclick="return confirm('are u sure?')">Delete</a></td>
			  </tr>
			{% endfor %}
			{% else %}
				<tr>
				<td colspan="4" align="center">
					<div>Be the first one to add you <a href="/users">address</a>.</div>
				</td>
				</tr>
			{% endif %}
		</tbody>
	</table>
{% endblock %}
